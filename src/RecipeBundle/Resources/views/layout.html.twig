<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Recipes{% endblock %}</title>

        <link href="/css/app.css" rel="stylesheet">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="header">
                    <h1>Recipes</h1>
                </div>
            </div>
            <div class="row">
                <div class="content medium-12 columns">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
        {% block javascripts %}{% endblock %}

        <script src="/js/jquery.js"></script>
        <script src="/js/foundation.js"></script>
        <script src="/js/app.js"></script>
        <script>
            $(document).foundation();
        </script>
    </body>
</html>
