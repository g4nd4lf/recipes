{% extends 'RecipeBundle::layout.html.twig' %}
{% block title %}Login{% endblock %}

{% block body %}
    <div class="row">
        <div class="large-6 columns large-offset-2">
            <div class="login-panel">
                <p class="welcome">Log in</p>
                <form method="post" action="{{ path("login") }}">
                    <div class="row">
                        <div class="small-12 columns">
                            <input type="text" name="username" placeholder="Username" required="required" autofocus="autofocus" value="{{ last_username ? last_username : '' }}" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="small-12 columns ">
                            <input type="password" name="password" placeholder="Password" required="required" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="small-12 columns">
                            <button class="button" type="submit" title="Click to log-in">Log in</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
