{% extends 'RecipeBundle::layout.html.twig' %}

{% block body %}
    <h1>Recipes</h1>

    <div class="list">
        {% for recipe in recipes %}
            <div class="row">
                <div class="medium-6 columns">
                    <a href="{{ path('admin_recipe_show', { 'id': recipe.id }) }}">{{ recipe.name }}</a>
                </div>
                <div class="medium-6 columns">
                    <a class="button round secondary" href="{{ path('admin_recipe_edit', { 'id': recipe.id }) }}">edit</a>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="button-bar">
        <a class="button round success" href="{{ path('admin_recipe_new') }}">Create</a>
    </div>
{% endblock %}
